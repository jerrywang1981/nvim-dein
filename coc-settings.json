{
  "suggest.triggerAfterInsertEnter": true,
  "suggest.noselect": false,
  "suggest.timeout": 500,
  "suggest.minTriggerInputLength": 2,
  "suggest.echodocSupport": true,
	"suggest.snippetIndicator": "‚≠êÔ∏é",
	"suggest.enablePreview": true,
  "diagnostic.errorSign": "üò°",
	"diagnostic.warningSign": "ü§î",
  "prettier.eslintIntegration": true,
  "prettier.tslintIntegration": true,
  "prettier.stylelintIntegration": true,
  "tslint.autoFixOnSave": false,
  "tslint.jsEnable": false,
  "typescript.preferences.quoteStyle": "single",
  "typescript.suggest.autoImports": true,
  "typescript.format.insertSpaceAfterConstructor": false,
  "tslint.suppressWhileTypeErrorsPresent": false,
  "tslint.alwaysShowRuleFailuresAsWarnings": false,
  "imselect.defaultInput": "com.apple.keylayout.US",
  "imselect.enableStatusItem": false,
  "eslint.packageManager": "yarn",
  "eslint.filetypes": [
    "javascript",
    "javascript.jsx",
    "javascriptreact"
  ],
  "eslint.autoFix": true,
  "eslint.autoFixOnSave": true,
  "tsserver.log": "verbose",
  "tsserver.npm": "/usr/local/bin/",
  "tsserver.trace.server": "verbose",
  "java.autobuild.enabled": true,
  "java.trace.server": "verbose",
  "java.referencesCodeLens.enabled": true,
  "java.implementationsCodeLens.enabled": true,
  "java.signatureHelp.enabled": true,
  "java.format.enabled": true,
  "java.import.gradle.enabled": true,
  "java.progressReports.enabled": true,
  "java.import.maven.enabled": true,
  "java.completion.enabled": true,
  "java.contentProvider.preferred": "fernflower",
  "java.completion.importOrder": [
    "java",
    "javax",
    "com",
    "org"
  ],
  "java.format.comments.enabled": true,
  "java.format.onType.enabled": true,
  "java.completion.guessMethodArguments": true,
  "go.goplsOptions": {
    "completeUnimported": true
  },
  "go.enable": true,
  "languageserver": {
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile"],
      "args": ["--stdio"]
    },
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"],
      "initializationOptions": {
				"gocodeCompletionEnabled": true,
				"diagnosticsEnabled": true,
				"lintTool": "golint"
			},
    },
    "bash": {
			"command": "bash-language-server",
			"args": ["start"],
			"filetypes": ["sh"],
			"ignoredRootPaths": ["~"]
		},
    "python": {
        "command": "python",
        "args": [
          "-mpyls",
          "-vv",
          "--log-file",
          "/tmp/lsp_python.log"
        ],
        "trace.server": "verbose",
        "filetypes": [
          "python"
        ],
        "settings": {
          "pyls": {
            "enable": true,
            "trace": {
              "server": "verbose"
            },
            "commandPath": "",
            "configurationSources": [
              "pycodestyle"
            ],
            "plugins": {
              "jedi_completion": {
                "enabled": true
              },
              "jedi_hover": {
                "enabled": true
              },
              "jedi_references": {
                "enabled": true
              },
              "jedi_signature_help": {
                "enabled": true
              },
              "jedi_symbols": {
                "enabled": true,
                "all_scopes": true
              },
              "mccabe": {
                "enabled": true,
                "threshold": 15
              },
              "preload": {
                "enabled": true
              },
              "pycodestyle": {
                "enabled": true
              },
              "pydocstyle": {
                "enabled": false,
                "match": "(?!test_).*\\.py",
                "matchDir": "[^\\.].*"
              },
              "pyflakes": {
                "enabled": true
              },
              "rope_completion": {
                "enabled": true
              },
              "yapf": {
                "enabled": true
              }
            }
          }
        }
      }
  },
}
